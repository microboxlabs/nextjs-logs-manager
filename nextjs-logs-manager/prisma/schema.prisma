datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     String   
}

model Log {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  level     String   
  service   String
  message   String
}